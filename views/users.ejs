                            <option value="F">Femme</option>
                            <option value="H">Homme</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-diplome">Diplôme</label>
                        <input type="text" id="edit-diplome" name="diplome" class="form-control" placeholder="exemple: cadre" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-date-depart">Date de départ</label>
                        <input type="text" id="edit-date-depart" name="date_depart" class="form-control date-mask" placeholder="MM/DD/YYYY" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-motif">Motif</label>
                        <input type="text" id="edit-motif" name="motif" class="form-control" placeholder="motif" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-cin">N° CIN</label>
                        <input type="text" id="edit-cin" name="cin" class="form-control" placeholder="12345678" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-cnss">N° CNSS</label>
                        <input type="text" id="edit-cnss" name="cnss" class="form-control" placeholder="n° cnss" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-fonction">Fonction</label>
                        <input type="text" id="edit-fonction" name="fonction" class="form-control" placeholder="exemple: technicien" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-societe">Société</label>
                        <input type="text" id="edit-societe" name="societe" class="form-control" placeholder="exemple: PGS" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-tel">N° téléphone</label>
                        <input type="text" id="edit-tel" name="tel" class="form-control" placeholder="12345678" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-date-naiss">Date de naissance</label>
                        <input type="text" id="edit-date-naiss" name="date_naiss" class="form-control date-mask" placeholder="MM/DD/YYYY" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-lieu">Lieu</label>
                        <input type="text" id="edit-lieu" name="lieu" class="form-control" placeholder="exemple: Mégrine" />
