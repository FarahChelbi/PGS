                        <input type="text" id="edit-prenom" name="prenom" class="form-control" placeholder="Prénom employé" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="edit-sexe">Sexe</label>
                        <select id="edit-sexe" name="sexe" class="select2 form-select" data-allow-clear="true">
