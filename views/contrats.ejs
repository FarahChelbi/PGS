<div class="card">
  <div class="card-datatable table-responsive">
    <table class="datatables-basic table border-top">
      <thead>
        <tr>
          
            <th>Matricule</th>
            <th>Contrat</th>
            <th >Date début</th>
            <th >Période intégration</th>
            <th >date fin</th>
            <th class="text-right" >Action</th>
        </tr>
      </thead>
      <tbody>
        <% contrats.forEach(contrat => { %>
          <tr  data-id="<%= contrat.Cont_PK %>">
              <td><%= contrat.Matricule %></td>
              <td><%= contrat.CONTRAT %></td>
              <td><%= contrat.DATE_DE_DEBUT %></td>
              <td><%= contrat.PERIODE_D_INTEGRATION %></td>
              <td><%= contrat.FIN__CONTRAT_PERIODE_D_ESSAI %></td>
              <td>
                <div class="btn-group-container"></div>
                <button class="btn btn-secondary details-btn edit-btn" href="javascript:;" data-id="<%= contrat.id %>">Modifier</button>
                  <button class="btn btn-danger delete-btn" data-id="<%= contrat.id %>">Delete</button>
                </div>
                </td>
          </tr>
      <% }) %>
        
      </tbody>
    </table>
