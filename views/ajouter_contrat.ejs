    <script>
      flatpickr("#collapsible-date-debut", {
        dateFormat: "d/m/Y", 
        altInput: true,
        altFormat: "d/m/Y",
        enableTime: false
    });
      flatpickr("#collapsible-date-fin", {
          dateFormat: "d/m/Y", 
          altInput: true,
          altFormat: "d/m/Y",
          enableTime: false
      });
      document.getElementById('contratForm').addEventListener('submit', function(e) {

        var dateDebutInput = document.getElementById('collapsible-date-debut').value;
        var dateFinInput = document.getElementById('collapsible-date-fin').value;

        // Fonction pour formater la date
        function formatDate(dateInput) {
            if (dateInput) {
                var dateParts = dateInput.split('/');
                if (dateParts.length === 3) {
                    return `${dateParts[0]}/${dateParts[1]}/${dateParts[2]}`;
                } else {
                    console.error('Date format is incorrect');
                }
            }
            return '';
        }

        // Formater les dates
        document.getElementById('collapsible-date-debut').value = formatDate(dateDebutInput);
        document.getElementById('collapsible-date-fin').value = formatDate(dateFinInput);
    });
  </script>
  
  
  
      

  
    
